{
  "compilerOptions": {
    "target": "es2018" /* Specify ECMAScript target version */,
    "module": "commonjs" /* Specify module code generation */,
    "strict": true /* Enable all strict type-checking options */,
    "esModuleInterop": true /* Enables interoperability between CommonJS and ES Modules */,
    "forceConsistentCasingInFileNames": true /* Ensure consistent casing of file names */,
    "skipLibCheck": true /* Skip type checking of declaration files */,
    "sourceMap": true /* Generate corresponding .map files */
  },
  "include": ["src/**/*.tsx", "src/**/*.ts" /* Specify files to be included in compilation */],
  "exclude": [
    "node_modules" /* Specify files to be excluded from compilation */
  ],
  "extends": "expo/tsconfig.base"
}
